<div class="profile-card">

  <header>

    <a href="#">
       @{var playerImgURL = $"images/{GamerTag}.png";}
       @{var defaultImgURL = "images/default.png";}

        @if (File.Exists($"{Environment.CurrentDirectory}/wwwroot/{playerImgURL}"))
        {
            <img class="playercardimg" src=@playerImgURL>
        }else
        {
            <img class="playercardimg" src=@defaultImgURL>
        }
    </a>

    <div>
        @{
            var role = GameRole;
            var roleImgURL = "images/" + role + ".svg";
        }
      <img class="playerrole" src=@roleImgURL style="width: 10%; margin:0; border-radius: 35%;" />
    </div>
    
    <h1>@GamerTag</h1>

    <h2>@Name</h2>

    
  </header>

  <PlayerStats />

  @*FOR STATS TO COME*@
  @*<div class="profile-bio">

    <p>Specialties are Creative UI, HTML5, CSS3, Semantic Web, Responsive Layouts, Web Standards Compliance, Performance Optimization, Cross Device Troubleshooting.</p>

  </div>*@

  <ul class="profile-social-links">

    <li>
      <a href="@twitterURL" target="_blank">
        <img src="images/twitter-icon.png">
      </a>
    </li>

    <li>
      <a href="@OPGGURL" target="_blank">
        <img src="images/opgg-icon.png">
      </a>
    </li>

    <li>
      <a href="@DiscordHash" target="_blank">
        <img src="images/discord-icon.png">
      </a>
    </li>

  </ul>

</div>

@code {
    [Parameter]
    public string GamerTag { get; set; }

    [Parameter]
    public string  Name { get; set; }

    [Parameter]
    public string twitterURL { get; set; }

    [Parameter]
    public string OPGGURL { get; set; }

    [Parameter]
    public string DiscordHash { get; set; }

    [Parameter]
    public string GameRole { get; set; }
}
